// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id         String      @id @default(uuid()) @map("_id")
  name       String
  surname    String
  username   String      @unique
  email      String      @unique
  password   String
  birthdate  DateTime
  cpf        String      @unique
  created_at DateTime
  BlogPosts  BlogPosts[]

  @@map("users")
}

model BlogPosts {
  id               String   @id @default(uuid()) @map("_id")
  categoryBlogPost String
  title            String
  text             String
  created_at       DateTime
  author_id        String

  user User @relation(fields: [author_id], references: [id])

  @@map("blog_posts")
}
